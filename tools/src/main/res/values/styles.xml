<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomView" />

    <style name="CustomView.Divider" />

    <style name="CustomView.Divider.Margin">
        <!--We need to specify width and height since this style is used in a include tag-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/keyline_icon</item>
        <item name="android:layout_marginEnd">@dimen/keyline_icon</item>
    </style>

    <style name="CustomView.ListHeader">
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance" />

    <style name="CustomStyle" />

</resources>
